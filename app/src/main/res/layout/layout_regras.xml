<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_galo"
    tools:context=".RegrasActivity">

    <TextView
        android:id="@+id/Regras"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Cada jogador tem um símbolo associado O ou X. Jogam alternadamente e ganha
o jogador que fizer três símbolos seguidos, quer na diagonal, vertical ou horizontal."
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bvoltar"
        android:layout_width="227dp"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:background="@drawable/botao_voltar" />

</RelativeLayout>